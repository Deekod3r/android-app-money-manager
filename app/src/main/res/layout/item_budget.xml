<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_round_blur_blue_bg"
        android:paddingVertical="5dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBudgetName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="Tên hạn mức"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvNotifyBudget"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Bội chi"
                    android:layout_weight="0.2"
                    android:background="@drawable/badge_outline_red"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="3dp">

                <TextView
                    android:id="@+id/tvBudgetTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:text="Thời gian"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvBudgetLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn mức"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarBudget"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginVertical="5dp"
                android:indeterminateOnly="false"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progressbar_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBudgetTimeRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:text="Thời gian còn lại"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvBudgetRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Dự chi còn lại"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>


